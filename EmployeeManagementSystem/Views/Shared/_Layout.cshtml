@using Microsoft.AspNetCore.Identity
@using EmployeeManagementSystem.Models
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Employee Management System</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        body {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .sidebar {
            min-width: 220px;
            max-width: 220px;
            background-color: #343a40;
            min-height: 100vh;
        }

            .sidebar .nav-link {
                color: #ddd;
            }

                .sidebar .nav-link.active {
                    background-color: #495057;
                    color: #fff;
                }

        .content {
            flex-grow: 1;
            padding: 20px;
        }

        .sidebar .user-role {
            padding: 10px 15px;
            color: #fff;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <nav class="sidebar d-flex flex-column p-3">
            <a class="navbar-brand text-white mb-3" asp-controller="Home" asp-action="Index">
                <i class="bi bi-people-fill"></i> EMS
            </a>

            @if (SignInManager.IsSignedIn(User))
            {
                <div class="user-role mb-3">
                    Hello, @User.Identity?.Name <br />
                    Role: @(User.IsInRole("Admin") ? "Admin" : "Employee")
                </div>

                <ul class="nav nav-pills flex-column mb-auto">
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="Departments" asp-action="Index"><i class="bi bi-diagram-3"></i> Departments</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Employees" asp-action="Index"><i class="bi bi-people"></i> Employees</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="ManageUsers"><i class="bi bi-person-gear"></i> Manage Users</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Attendance" asp-action="AllAttendance"><i class="bi bi-calendar-check"></i> Attendance</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Leave" asp-action="ManageLeaves"><i class="bi bi-briefcase"></i> Leaves</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Tasks" asp-action="Index"><i class="bi bi-list-task"></i> Tasks</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Notifications" asp-action="Create"><i class="bi bi-bell"></i> Send Notification</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="EmployeeSalary" asp-action="Index"><i class="bi bi-cash-coin"></i> Mange Salaries</a></li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="EmployeeProfile" asp-action="MyProfile"><i class="bi bi-person-badge"></i> My Profile</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Attendance" asp-action="MyAttendance"><i class="bi bi-calendar-check"></i> My Attendance</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Leave" asp-action="MyLeaves"><i class="bi bi-briefcase"></i> My Leaves</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Tasks" asp-action="MyTasks"><i class="bi bi-list-task"></i> My Tasks</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Notifications" asp-action="MyNotifications"><i class="bi bi-bell"></i> My Notifications</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="EmployeeSalary" asp-action="MySalary"><i class="bi bi-cash-coin"></i>My Salary</a></li>
                    }
                </ul>

                <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="mt-auto">
                    <button type="submit" class="btn btn-outline-light w-100">
                        <i class="bi bi-box-arrow-right"></i> Logout
                    </button>
                </form>
            }
            else
            {
                <a class="btn btn-outline-light mb-2" asp-area="Identity" asp-page="/Account/Login"><i class="bi bi-box-arrow-in-right"></i> Login</a>
                <a class="btn btn-outline-light" asp-area="Identity" asp-page="/Account/Register"><i class="bi bi-person-plus"></i> Register</a>
            }
        </nav>

        <!-- Main Content -->
        <div class="content flex-grow-1">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted text-center py-3 bg-light">
        &copy; @DateTime.Now.Year - Employee Management System
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
