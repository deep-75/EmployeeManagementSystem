@model IEnumerable<EmployeeManagementSystem.Models.LeaveRequest>

<h2>Manage Leave Requests</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Employee</th>
            <th>Start</th>
            <th>End</th>
            <th>Reason</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var leave in Model)
        {
            <tr>
                <td>@leave.Employee?.FullName (@leave.Employee?.Email)</td>
                <td>@leave.StartDate.ToShortDateString()</td>
                <td>@leave.EndDate.ToShortDateString()</td>
                <td>@leave.Reason</td>
                <td>@leave.Status</td>
                <td>
                    @if (leave.Status == "Pending")
                    {
                        <a asp-action="Approve" asp-route-id="@leave.Id" class="btn btn-success btn-sm">Approve</a>
                        <a asp-action="Reject" asp-route-id="@leave.Id" class="btn btn-danger btn-sm">Reject</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
