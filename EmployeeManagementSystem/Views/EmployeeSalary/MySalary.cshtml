@model IEnumerable<EmployeeManagementSystem.Models.EmployeeSalary>

<h2>My Salary</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Base Salary</th>
            <th>Bonus</th>
            <th>Deductions</th>
            <th>Net Salary</th>
            <th>Effective From</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.BaseSalary</td>
                <td>@s.Bonus</td>
                <td>@s.Deductions</td>
                <td>@s.NetSalary</td>
                <td>@s.EffectiveFrom.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>
